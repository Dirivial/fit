// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["referentialIntegrity"]
}

datasource db {
    provider             = "mysql"
    url                  = env("DATABASE_URL")
    referentialIntegrity = "prisma"
}

model User {
    id                       Int                @id @default(autoincrement())
    name                     String
    email                    String
    Workout                  Workout[]
    CreatedExerciseTemplates ExerciseTemplate[]
}

model Workout {
    id                       Int                        @id @default(autoincrement())
    name                     String
    description              String?
    user                     User                       @relation(fields: [userId], references: [id])
    userId                   Int
    Workout_ExerciseTemplate Workout_ExerciseTemplate[]
}

model Exercise {
    id                 Int               @id @default(autoincrement())
    sets               Int               @default(5)
    reps               Int               @default(5)
    weigth             Int               @default(0)
    date               DateTime?         @default(now())
    ExerciseTemplate   ExerciseTemplate? @relation(fields: [exerciseTemplateId], references: [id])
    exerciseTemplateId Int?
}

model ExerciseTemplate {
    id                       Int                        @id @default(autoincrement())
    User                     User?                      @relation(fields: [userId], references: [id])
    userId                   Int?
    Exercise                 Exercise[]
    name                     String                     @unique
    description              String
    sets                     Int                        @default(5)
    reps                     Int                        @default(5)
    weigth                   Int                        @default(0)
    restTime                 Int                        @default(120)
    Workout_ExerciseTemplate Workout_ExerciseTemplate[]
}

model Workout_ExerciseTemplate {
    workout            Workout          @relation(fields: [workoutId], references: [id])
    workoutId          Int
    ExerciseTemplate   ExerciseTemplate @relation(fields: [exerciseTemplateId], references: [id])
    exerciseTemplateId Int

    @@id([workoutId, exerciseTemplateId])
}
